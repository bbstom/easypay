# ==================== 基础配置 ====================
# 服务器端口（后端监听端口，生产环境建议 127.0.0.1:5000）
PORT=5000

# 运行环境（development/production）
NODE_ENV=development

# 应用 URL（后端地址，生产环境使用 HTTPS 域名）
APP_URL=http://localhost:5000

# 前端 URL（生产环境使用 HTTPS 域名）
FRONTEND_URL=http://localhost:5173

# ==================== 数据库配置 ====================
# MongoDB 连接字符串
MONGODB_URI=mongodb://localhost:27017/easypay

# 如果 MongoDB 需要认证，使用以下格式：
# MONGODB_URI=mongodb://username:password@localhost:27017/easypay?authSource=admin

# ==================== 安全配置 ====================
# JWT 密钥（必须修改为强密钥，至少 32 位）
JWT_SECRET=your-super-secret-jwt-key-change-this-to-random-string

# 加密密钥（用于加密敏感数据，必须 32 位）
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# 会话密钥
SESSION_SECRET=your-session-secret-key-change-this

# 生成强密钥的方法：
# node server/scripts/generateStrongKey.js

# ==================== Telegram Bot 配置 ====================
# Bot Token（从 @BotFather 获取）
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Bot 用户名（不含 @）
TELEGRAM_BOT_USERNAME=YourBotUsername

# API URL（Bot 回调使用，生产环境使用 HTTPS 域名）
API_URL=http://localhost:5000

# ==================== TRON 区块链配置 ====================
# TronGrid API Key（从 https://www.trongrid.io 获取）
TRON_GRID_API_KEY=your-trongrid-api-key-here

# 主钱包私钥（64位十六进制字符串，不含 0x 前缀）
TRON_PRIVATE_KEY=your-wallet-private-key-64-hex-characters

# 主钱包地址（TRC20 地址）
TRON_WALLET_ADDRESS=TYourWalletAddressHere

# ==================== 支付网关配置（可选）====================
# 支付平台商户ID
PAYMENT_MERCHANT_ID=your-merchant-id

# 支付平台密钥
PAYMENT_SECRET_KEY=your-payment-secret-key

# 支付平台 API 地址
PAYMENT_API_URL=https://payment-gateway.com/api

# 支付回调地址（生产环境自动使用 APP_URL）
# PAYMENT_CALLBACK_URL=https://your-domain.com/api/payments/callback

# ==================== 能量租赁配置（可选）====================
# CatFee API Key（从 https://catfee.io 获取）
CATFEE_API_KEY=your-catfee-api-key

# CatFee API Secret
CATFEE_API_SECRET=your-catfee-api-secret

# CatFee API URL
# 生产环境：https://api.catfee.io
# 测试环境：https://nile.catfee.io
CATFEE_API_URL=https://api.catfee.io

# ==================== 邮件配置（可选）====================
# SMTP 服务器配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# 发件人信息
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=EasyPay

# ==================== Redis 配置（可选）====================
# Redis 连接字符串（用于缓存和会话）
# REDIS_URL=redis://localhost:6379

# ==================== 日志配置 ====================
# 日志级别（error/warn/info/debug）
LOG_LEVEL=info

# 日志文件路径
LOG_FILE_PATH=./logs

# ==================== SEO 和分析配置 ====================
# Google Analytics 4 测量 ID（从 https://analytics.google.com 获取）
# 格式：G-XXXXXXXXXX
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ==================== 其他配置 ====================
# 允许的跨域来源（多个用逗号分隔）
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# API 请求限流（每分钟最大请求数）
RATE_LIMIT_MAX=100

# 文件上传大小限制（MB）
MAX_FILE_SIZE=10

# ==================== 生产环境示例 ====================
# 生产环境配置示例（取消注释并修改）：
#
# NODE_ENV=production
# PORT=5000
# APP_URL=https://your-domain.com
# FRONTEND_URL=https://your-domain.com
# API_URL=https://your-domain.com
# MONGODB_URI=mongodb://username:password@localhost:27017/easypay?authSource=admin
# JWT_SECRET=your-production-jwt-secret-very-long-and-random
# ENCRYPTION_KEY=your-production-encryption-key-32
# TELEGRAM_BOT_TOKEN=your-production-bot-token
# TRON_GRID_API_KEY=your-production-trongrid-key
# TRON_PRIVATE_KEY=your-production-wallet-private-key
# TRON_WALLET_ADDRESS=your-production-wallet-address
# LOG_LEVEL=warn
# CORS_ORIGIN=https://your-domain.com
